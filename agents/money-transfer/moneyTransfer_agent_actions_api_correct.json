{
  "openapi": "3.0.0",
  "info": {
    "title": "Money Transfer Agent API",
    "description": "API for mobile money transfers between users",
    "version": "1.0.0"
  },
  "paths": {
    "/transferMoney": {
      "post": {
        "summary": "Transfer mobile money between users",
        "description": "Executes a mobile money transfer from source to target phone number",
        "operationId": "transferMoney",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sourcePhone": {
                    "type": "string",
                    "description": "The phone number of the sender (e.g., +243891234567)"
                  },
                  "targetPhone": {
                    "type": "string",
                    "description": "The phone number of the recipient (e.g., +243899999999)"
                  },
                  "amount": {
                    "type": "number",
                    "description": "The amount to transfer in FC (must be positive)"
                  }
                },
                "required": ["sourcePhone", "targetPhone", "amount"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transfer completed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "Status of the transfer (success/error)"
                    },
                    "message": {
                      "type": "string",
                      "description": "Transfer confirmation or error message"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid parameters or insufficient balance"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
